{
  "compilerOptions": {
    "sourceMap": true,
    "rootDir": "src/main",
    "outDir": "./app",
    "baseUrl": "./",
    "declaration": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es2015",
    "types": [
      "node"
    ],
    "lib": [
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ]
  },
  "files": [
    "src/main/main.ts",
  ],
  "references": [
    { "path": "src/shared", "prepend": true }
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
